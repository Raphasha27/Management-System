generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Client {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  company   String?
  phone     String?
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Service {
  id          Int      @id @default(autoincrement())
  name        String
  category    String   // Web Development, Software Development, Cloud Services, etc.
  description String?
  price       Float    // Base price
  createdAt   DateTime @default(now())
  projects    ProjectService[]
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  status      String    // Active, Completed, Pending, On Hold
  startDate   DateTime  @default(now())
  endDate     DateTime?
  budget      Float
  clientId    Int
  client      Client    @relation(fields: [clientId], references: [id])
  services    ProjectService[]
}

model ProjectService {
  id         Int     @id @default(autoincrement())
  projectId  Int
  project    Project @relation(fields: [projectId], references: [id])
  serviceId  Int
  service    Service @relation(fields: [serviceId], references: [id])
  quantity   Int     @default(1)
  customPrice Float?
}

